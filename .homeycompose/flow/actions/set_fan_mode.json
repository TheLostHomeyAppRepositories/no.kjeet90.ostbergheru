{
    "id": "set_fan_mode",
    "title": {
        "en": "Set fan mode"
    },
    "titleFormatted": {
        "en": "Set fan mode to [[mode]]"
    },
    "highlight": true,
    "args": [
        {
            "name": "device",
            "type": "device",
            "filter": "driver_id=gen-3-remote|iqc-touch"
        },
        {
            "name": "mode",
            "type": "dropdown",
            "title": { "en": "Mode" },
            "required": false,
            "values": [
                { "id": "off", "label": { "en": "Off" } },
                { "id": "normal", "label": { "en": "Normal" } },
                { "id": "overpressure", "label": { "en": "Overpressure" } },
                { "id": "boost", "label": { "en": "Boost" } },
                { "id": "away", "label": { "en": "Away" } }
            ]
        }
    ]
}
